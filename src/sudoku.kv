<SudokuGrid@GridLayout>:
    cols: 9
    rows: 9

FloatLayout:
    SudokuGrid:
        id: sudoku_grid
        size_hint: 0.9, 0.7
        pos_hint: {'center_x': 0.5, 'top': 0.95}

    BoxLayout:
        id: number_palette
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        pos_hint: {'center_x': 0.5, 'y': 0.05}
        spacing: '5dp'